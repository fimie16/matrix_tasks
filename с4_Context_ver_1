@startuml
!include <C4/C4_Context>

title Контекстная диаграмма маркетплейса

Person(admin, "Администратор", "Управляет платформой, модерирует контент")
Person(seller, "Продавец", "Регистрируется, добавляет товары, управляет заказами")
Person(customer, "Клиент", "Просматривает товары, оформляет заказы, оставляет отзывы")
Person_Ext(logistics, "Логистический партнер", "Обрабатывает заказы и управляет доставкой")
Person(support, "Служба поддержки", "Проводит онбординг и отвечает на тикеты")

System(marketplace, "Маркетплейс", "Платформа для онлайн-продаж товаров")
System_Ext(banks, "Банки", "Обработка платежей и выплат")
System_Ext(allerts, "Система уведомлений", "Отправка уведомлений")


Rel(admin, marketplace, "Управляет платформой")
Rel(seller, marketplace, "Регистрируется, добавляет товары, управляет заказами")
Rel(customer, marketplace, "Просматривает товары, оформляет заказы")
Rel(marketplace, logistics, "Отправляет запросы на доставку товаров на склад")
Rel(logistics, marketplace, "Получает заказы, обновляет статусы доставки")
Rel(support, marketplace, "Обучает продавцов, помогает всем участникам платформы")
Rel(marketplace, banks, "Отправляет запросы на платежи и выплаты")
Rel(banks, marketplace, "Возвращает статус операций, переводит деньги на счета")
Rel(marketplace, allerts, "Генерирует уведомления по заданным сценариям")
Rel(allerts, marketplace, "Рассылает всем участникам взаимодействия уведомления")



@enduml
